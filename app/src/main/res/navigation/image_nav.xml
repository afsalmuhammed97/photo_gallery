    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_nav"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.practies.photogallery.Ui.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_galleryFragment_to_imagDetailsFragment"
            app:destination="@id/imagDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/imagDetailsFragment"
        android:name="com.practies.photogallery.Ui.ImagDetailsFragment"
        android:label="fragment_imag_details"
        tools:layout="@layout/fragment_imag_details" />
